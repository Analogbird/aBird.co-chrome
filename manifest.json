{
	"manifest_version": 2,
	"name": "aBird.co",
	"short_name": "aBird.co",
	"version": "1.2",
	"author": "Stefan Aichholzer - Analogbird B.V.",
	"icons": {
		"128": "img/icon_128x128.png"
	},
	"description": "The world's most awesome URL shortening service.",

	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": true
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"clipboardWrite"
	],
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "pop.html"
	}
}
